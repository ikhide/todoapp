<% include ../views/partials/header %>

<div class="row">
    <div class="col-md-6">
            <form method = "post" action="/todo/edit/<%= todo._id %>">
                <div class="form-group">
                    <label>Todo Name</label>
                    <input class="form-control" type="text" name="text" placeholder="Add Todo" value="<%= todo.text %>">
                </div>
                <div class="form-group"> 
                        <label>Todo Duration</label>
                        <input class="form-control" type="number" name="months" placeholder="Months" value="<%= todo.months %>">
                </div>
                <div>
                    <label>Todo Body</label>
                    <textarea class="form-control" type="text" name="body" placeholder="Add Description" ><%= todo.body %></textarea>
                </div>
                <button type="submit" class="btn btn-primary">Submit</button> <a class="btn btn-danger" href="/">Cancel</a>
            </form>
            


    </div>
</div>
<% include ../views/partials/footer %>

